<Application x:Class="HomeWork_4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HomeWork_4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonStyle">
            <Setter Property="Button.Background" Value="#5EBEC4"/>
            <Setter Property="Button.Padding" Value="5"/>
            <Setter Property="Button.FontFamily" Value="Cascadia Mono"/>
            <Setter Property="Button.BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="TextBoxStyle">
            <Setter Property="TextBox.BorderThickness" Value="1.5"/>
            <Setter Property="TextBox.BorderBrush" Value="#5EBEC4"/>
        </Style>
        <Style x:Key="HeaderStyle">
            <Setter Property="Label.FontSize" Value="26"/>
            <Setter Property="Label.Margin" Value="5"/>
            <Setter Property="Label.Foreground" Value="#5EBEC4"/>
            <Setter Property="Label.FontFamily" Value="Cascadia Mono"/>
            <Setter Property="Label.FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
